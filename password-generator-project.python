import random
import string

def generate_password(length=12, use_digits=True, use_special=True):
    characters = string.ascii_letters  # a-zA-Z
    if use_digits:
        characters += string.digits     # 0-9
    if use_special:
        characters += string.punctuation  # !@#$%^&*()...

    if length < 4:
        return "âŒ Password length should be at least 4 characters."

    password = ''.join(random.choice(characters) for _ in range(length))
    return password

def main():
    print("ðŸ” Password Generator")
    try:
        length = int(input("Enter desired password length: "))
        use_digits = input("Include digits? (y/n): ").lower() == 'y'
        use_special = input("Include special characters? (y/n): ").lower() == 'y'

        password = generate_password(length, use_digits, use_special)
        print(f"âœ… Your generated password: {password}")
    except ValueError:
        print("âŒ Invalid input. Please enter numeric values for length.")

if __name__ == "__main__":
    main()